<section class="breadcrumbs">
  <nav>
    <ul>
      <li>
        <%= link_to 'accounts', accounts_path %>
      </li>
      >>
      <li>
        <%= link_to account.name.humanize.downcase, account_servers_path(account) %>
      </li>
    </ul>
  </nav>
</section>

<section class="form">
  <h1>New Server</h1>
  <%= simple_form_for @server, :url => account_servers_path(account) do |f| %>
    <%= f.input :host %>
    <%= f.input :host_name %>
    <%= f.input :user %>
    <%= f.input :port %>
    <%= f.button :submit %>
  <% end %>
</section>

<section class="servers">
  <h1 class="title"><%= account.name %> Servers</h1>
  <%= render servers %>
</section>
